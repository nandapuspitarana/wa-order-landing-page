<style>
  .section {
    padding: 6rem 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-tag {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--green);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-tag::before {
    content: "";
    width: 20px;
    height: 1px;
    background: var(--green);
  }

  .section h2 {
    font-family: "Fraunces", serif;
    font-size: clamp(2rem, 4vw, 3.2rem);
    font-weight: 300;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .section h2 em {
    font-style: italic;
    color: var(--green);
  }

  .section-lead {
    font-size: 0.85rem;
    color: var(--muted);
    line-height: 1.8;
    max-width: 480px;
    margin-bottom: 3rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-top: 2rem;
  }

  .feature-list {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .feature-item {
    display: flex;
    gap: 1rem;
    padding: 1.2rem;
    border: 1px solid rgba(245, 242, 232, 0.06);
    border-radius: 12px;
    transition: all 0.2s;
    cursor: default;
  }

  .feature-item:hover {
    border-color: rgba(37, 211, 102, 0.3);
    background: rgba(37, 211, 102, 0.04);
  }

  .feature-item-icon {
    font-size: 1.4rem;
    flex-shrink: 0;
  }

  .feature-item-content h4 {
    font-family: "Syne", sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--cream);
  }

  .feature-item-content p {
    font-size: 0.72rem;
    color: var(--muted);
    line-height: 1.5;
  }

  /* FLOW CARD */
  .flow-card {
    background: #0b1519;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(37, 211, 102, 0.15);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  .flow-header {
    background: #1f2c34;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .flow-header h4 {
    font-family: "Syne", sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    color: #e9eef0;
  }

  .flow-status {
    font-size: 0.6rem;
    color: var(--green);
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .flow-status::before {
    content: "";
    width: 5px;
    height: 5px;
    background: var(--green);
    border-radius: 50%;
    animation: pulse 1.5s infinite;
  }

  .flow-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .flow-step {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .flow-num {
    width: 24px;
    height: 24px;
    background: rgba(37, 211, 102, 0.1);
    border: 1px solid rgba(37, 211, 102, 0.3);
    border-radius: 50%;
    display: grid;
    place-items: center;
    font-size: 0.6rem;
    color: var(--green);
    flex-shrink: 0;
    font-family: "Syne", sans-serif;
    font-weight: 700;
  }

  .flow-step-content h5 {
    font-family: "Syne", sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--cream);
    margin-bottom: 0.2rem;
  }

  .flow-step-content p {
    font-size: 0.65rem;
    color: var(--muted);
    line-height: 1.5;
  }

  .flow-divider {
    width: 1px;
    height: 16px;
    background: rgba(37, 211, 102, 0.2);
    margin-left: 12px;
  }

  @media (max-width: 768px) {
    .section {
      padding: 4rem 1.5rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
